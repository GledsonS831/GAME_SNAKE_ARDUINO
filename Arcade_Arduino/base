#include "LedControl.h"
#include "binary.h"
 
LedControl lc = LedControl(12,11,10,4);
 
// tempo de delay entre as faces:
//-------------------------------
unsigned long delaytime=400;
 
// face feliz:
//------------
 
byte ff[8]= {B00111100,B01000010,B10100101,B10000001,B10100101,B10011001,B01000010,B00111100};
 
// face neutra:
//-------------
byte fn[8]={B00111100, B01000010,B10100101,B10000001,B10111101,B10000001,B01000010,B00111100};
 
// face triste:
//-------------
byte ft[8]= {B00111100,B01000010,B10100101,B10000001,B10011001,B10100101,B01000010,B00111100};
 
void setup() {
  lc.shutdown(0,false);
  lc.shutdown(1,false);
  lc.shutdown(2,false);
  lc.shutdown(3,false);
 
  // seta o brilho para um valor mediano:
  //-------------------------------------
  lc.setIntensity(0,0);
  lc.setIntensity(1,1);
  lc.setIntensity(2,1);
  lc.setIntensity(3,1);
 
  // limpa o display:
  //-----------------
  lc.clearDisplay(0);  
}
 
void desenhaFaces(){
 
  // Mostra a face feliz:
  //---------------------
    int i = 7;
    lc.setLed(3,0,i,true);
    delay(1000);
    lc.setLed(3,0,i,false);
    lc.setLed(3,0,i+1,true);
  
  
  delay(10000);
}
 
void loop(){
  desenhaFaces();
}
